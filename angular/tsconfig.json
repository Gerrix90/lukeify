{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir":"public/angular"
  },
  "exclude": [
    "node_modules",
    "vendor"
  ],
  "typeRoots": [
    "node_modules/@types"
  ],
  "types": [
    "core-js"
  ]
}