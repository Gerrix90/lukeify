{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es2017",
        "lib": ["esnext", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "outDir":"../public"
    },
    "exclude": [
        "../node_modules",
        "vendor"
    ],
    "typeRoots": [
        "node_modules/@types"
    ]
}
